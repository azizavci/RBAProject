@model RBAProject.Models.Card

@{ ViewData["Title"] = "Delete"; }

<h1>Sil</h1>

<h3>Silme işlemini yapmak istediğinize emin misiniz?</h3>
<div>
    <h4>Kredi Kartı</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kullanıcı Adı:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Userfirstname)
        </dd>
        <dt class="col-sm-2">
            Kullanıcı Soyadı :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Userlastname)
        </dd>
        <dt class="col-sm-2">
            Kart Numarası :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cardnumber)
        </dd>
        <dt class="col-sm-2">
            Ay :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cardmonth)
        </dd>
        <dt class="col-sm-2">
            Yıl :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caryear)
        </dd>
        <dt class="col-sm-2">
            Güvenlik Kodu :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cvv)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
