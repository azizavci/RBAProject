@model RBAProject.Models.Card

@{
    ViewData["Title"] = "Details";
}



<h1 style="text-align:center">Detaylar</h1>

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive" style="overflow:hidden;">
                <table class="table">
                    <tr>
                        <th>Ad </th>
                        <th> Soyad</th>
                        <th> Kart Numarası</th>
                        <th> Ay  </th>
                        <th> Yıl </th>
                        <th> Güvenlik Kodu</th>

                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Userfirstname) </td>
                        <td>@Html.DisplayFor(model => model.Userlastname) </td>
                        <td>@Html.DisplayFor(model => model.Cardnumber) </td>
                        <td>@Html.DisplayFor(model => model.Cardmonth) </td>
                        <td>@Html.DisplayFor(model => model.Caryear) </td>
                        <td>@Html.DisplayFor(model => model.Cvv) </td>
                    </tr>

                </table>
                <div style="text-align:right">
                    <a asp-action="Edit" asp-route-id="@Model.Id">Güncelle</a> |
                    <a asp-action="Index">Listeye Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>