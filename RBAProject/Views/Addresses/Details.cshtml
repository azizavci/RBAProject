@model RBAProject.Models.Address

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align:center">Details</h1>

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive" style="overflow:hidden;">
                <table class="table">
                    <tr>
                        <th>Şehir</th>
                        <th>İlçe</th>
                    </tr>
                    <tr>
                        <td> @Html.DisplayFor(model => model.City)</td>
                        <td> @Html.DisplayFor(model => model.District)</td>
                    </tr>
                </table>
                <div style="text-align:right">
                    <div style="text-align:right">
                        <a asp-action="Edit" asp-route-id="@Model.Id">Güncelle</a> |
                        <a asp-action="Index">Listeye Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
